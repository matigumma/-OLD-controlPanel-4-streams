    <div class="col-md-4 mt-2">
        <div class="card bg-primary text-white">
            <div class="card-header">
                <h5>Agregar nueva camara</h5>
            </div>
            <div class="card-body">
                <form action="/camaras/add" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" value="{{name}}" placeholder="Nombre de la camara (ej.: Norte)" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="source" value="{{source}}" placeholder="Origen (ej.: rtsp://...)" class="form-control">
                    </div>      
                    <div class="form-row">
                        <div class="col">
                            <h5>Status:</h5>
                        </div>
                        <div class="col">
                            <div class="form-check form-check-inline">
                                <input type="checkbox" class="form-check-input" name="enable" {{#if_eq enable "on" }} checked {{/if_eq}} id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Enable</label>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-check form-check-inline">
                                <input type="checkbox" class="form-check-input" name="visible" {{#if_eq visible "on" }} checked {{/if_eq}} id="exampleCheck2">
                                <label class="form-check-label" for="exampleCheck2">Visible</label>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-success btn-block mt-2" type="submit">Agregar</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8 mt-2">
        <div class="card h-100">
            <div class="card-body">
                
            </div>
        </div>
    </div>