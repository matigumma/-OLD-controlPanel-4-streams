{{#each errors }}
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
    {{text}}
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
{{/each }}
<div class="d-md-flex">
    <div class="col-md-4 mt-2">
        <div class="card">
            <div class="card-header">
                <h6>Agregar nueva camara</h6>
            </div>
            <div class="card-body">
                <form action="/camaras/add/new" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" value="{{name}}" placeholder="Nombre" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="source" value="{{source}}" placeholder="Origen rtsp" class="form-control">
                    </div>      

                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" name="enable" checked id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Enable</label>
                    </div>
                    <div class="form-group form-check">
                        <input type="checkbox" class="form-check-input" name="visible" id="exampleCheck2">
                        <label class="form-check-label" for="exampleCheck2">Visible</label>
                    </div>
                    <button class="btn btn-primary btn-block mt-2" type="submit">Agregar</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8 mt-2">
        <div class="card">
            <div class="card-header">
                <h6>Datos</h6>
            </div>
            <div class="card-body">
                <h3>form</h3>
            </div>
        </div>
    </div>
</div>