<div class="col-md-6 m-2 mx-auto">
<div class="card bg-primary text-white">
    <div class="card-header">
        <h5>Editar camara</h5>
    </div>
    <div class="card-body">
        <form action="/camaras/edit/{{thiscam._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
            <div class="form-group">
                <input type="text" name="name" value="{{thiscam.name}}" placeholder="Nombre de la camara (ej.: Norte)"
                    class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="source" value="{{thiscam.source}}" placeholder="Origen (ej.: rtsp://...)"
                    class="form-control">
            </div>
            <div class="form-row">
                <div class="col">
                    <h5>Status:</h5>
                </div>
                <div class="col">
                    <div class="form-check form-check-inline">
                        <input type="checkbox" class="form-check-input" name="enable" {{#if_eq thiscam.enable "on" }} checked
                            {{/if_eq}} id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Enable</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-check form-check-inline">
                        <input type="checkbox" class="form-check-input" name="visible" {{#if_eq thiscam.visible "on" }} checked
                            {{/if_eq}} id="exampleCheck2">
                        <label class="form-check-label" for="exampleCheck2">Visible</label>
                    </div>
                </div>
            </div>
            <button class="btn btn-success btn-block mt-2" type="submit">Editar</button>
        </form>
    </div>
    <div class="card-footer">
        <form action="/camaras/delete/{{thiscam._id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn btn-danger btn-block">DELETE this cam</button>
        </form>
    </div>
</div>
</div>