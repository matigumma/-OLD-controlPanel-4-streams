<div class="container">
<div class="row">
 <button class="btn btn-secondary btn-block my-2" onclick="location.assign('/camaras/add');">Agregar nueva camara</button>

 {{#if camaras}}
    {{#each camaras as | camara|}}
        <div class="card {{#if_eq camara.enable 'on'}} bg-light {{#if_eq camara.visible 'on'}}border-primary{{/if_eq}}{{else}} bg-secondary{{/if_eq}} col-md-3 p-0 mb-2">
            <div role="button"  onclick="location.assign('/camaras/edit/{{camara._id}}');" class="card-header">
                <div class="row justify-content-between">
                    <div class="col custom-control custom-switch"> 
                        <input type="checkbox" {{#if_eq camara.enable "on"}}checked{{/if_eq}} class="custom-control-input" alt="{{camara._id}}" disabled id="{{camara._id}}"> 
                        <label class="custom-control-label {{#if_eq camara.enable 'off'}}text-white{{/if_eq}}" for="{{camara._id}}">{{camara.name}}</label> 
                    </div>
                    <div class="col text-right">
                        {{#if_eq camara.visible 'on'}}<span class="mr-auto"><i class="fas fa-eye"></i></span>{{else}}<span class="mr-auto"><i class="fas fa-eye-slash"></i></span>{{/if_eq}}
                        {{#if_eq camara.enable 'on'}}<img src="https://srv.freewaves.live/images/{{camara.name}}.jpg" onerror="this.onerror=null;this.src='img/alert.png';this.style='width:30px;height:27px';" class="card-img m-0" alt="..." style="width:30px;height:30px;border-radius: 50%;">{{/if_eq}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
 {{/if}}
</div>
</div>