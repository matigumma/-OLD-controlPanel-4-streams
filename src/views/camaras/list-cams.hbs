<div class="d-md-flex">
<table class="table table-sm table-borderless table-hover">
    <thead>
        <tr>
            <th scope="col">Cam Name</th>
            <th scope="col">Source</th>
            <th scope="col">Enable</th>
            <th scope="col">Visible</th>
            <th scope="col">Date updated</th>
        </tr>
    </thead>
    <tbody>
        {{#each camaras}}
        <tr onclick="location.assign('/camaras/{{_id}}');">
            <td><i class="fas fa-edit"></i> {{name}}</td>
            <td>{{source}}</td>
            <td>{{enable}}</td>
            <td>{{visible}}</td>
            <td>{{date}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
